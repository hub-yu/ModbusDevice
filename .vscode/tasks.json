{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rm * -r",
            "problemMatcher": []
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                "..",
                "-DFREERTOS=ON",              
                // "-DDEVICE_TYPE=STM32F030F4P6",
                // "-DBOARD_TYPE=BOARD_DEVICE"
                "-DDEVICE_TYPE=STM32F103C8T6",               
                "-DBOARD_TYPE=BOARD_SOCKET"
            ],
            "dependsOn": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make -j32",
            // "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "dependsOrder": "sequence",
            "dependsOn": [
                "cmake",
                "make"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "download",
            "command": "openocd",
            "args": [
                "-f",
                "../scripts/stlink-dap.cfg",
                "-f",
                "../scripts/stm32f0x.cfg",
                // "../scripts/stm32f1x.cfg",
                "-c",
                "init",
                "-c",
                "halt",
                "-c",
                "program app.bin 0x8000000",
                "-c",
                "reset",
                "-c",
                "shutdown"
            ],
            "group": "build",
            "dependsOn": "make",
            "problemMatcher": []
        }
    ]
}